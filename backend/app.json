{
  "name": "police-app-backend",
  "services": [
    {
      "name": "api",
      "github": {
        "repo": "destinpq/Police_App",
        "branch": "main",
        "deploy_on_push": true
      },
      "source_dir": "backend",
      "environment_slug": "node-js",
      "envs": [
        {
          "key": "PORT",
          "value": "8080"
        },
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "DB_HOST",
          "value": "${db-postgresql.HOSTNAME}"
        },
        {
          "key": "DB_PORT",
          "value": "${db-postgresql.PORT}"
        },
        {
          "key": "DB_USERNAME",
          "value": "${db-postgresql.USERNAME}"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${db-postgresql.PASSWORD}"
        },
        {
          "key": "DB_DATABASE",
          "value": "${db-postgresql.DATABASE}"
        },
        {
          "key": "DB_SSL",
          "value": "true"
        },
        {
          "key": "CLIENT_ORIGIN",
          "value": "https://walrus-app-r6lhp.ondigitalocean.app"
        }
      ],
      "http_port": 8080,
      "instance_count": 1,
      "instance_size_slug": "basic-xxs",
      "routes": [
        {
          "path": "/"
        }
      ],
      "run_command": "npm start",
      "build_command": "npm run build"
    }
  ],
  "databases": [
    {
      "name": "db-postgresql",
      "engine": "PG",
      "version": "15",
      "production": true,
      "cluster_name": "police-app-db",
      "db_name": "defaultdb",
      "db_user": "doadmin"
    }
  ]
} 